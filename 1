/*
1. Escreva um trecho de cÃ³digo para fazer a criaÃ§Ã£o dos novos tipos de dados conforme solicitado abaixo:

â€¢ HorÃ¡rio: composto de hora, minutos e segundos.
â€¢ Data: composto de dia, mÃªs e ano.
â€¢ Compromisso: composto de uma data, horÃ¡rio e texto que descreve o compromisso.


struct Data data;
struct Data â†’ tipo criado por vocÃª

data â†’ variÃ¡vel desse tipo




struct Data data;
ğŸ‘‰ A primeira palavra (struct Data) Ã© o TIPO
ğŸ‘‰ A segunda palavra (data) Ã© o NOME da variÃ¡vel



*/

#include <stdio.h>   // Biblioteca padrÃ£o de entrada e saÃ­da (printf, scanf)
#include <stdlib.h>  // Biblioteca padrÃ£o (para system("pause"))
#include <string.h>  // Biblioteca para manipulaÃ§Ã£o de strings


// --- DEFINIÃ‡ÃƒO DE NOVOS TIPOS DE DADOS ---

// Estrutura que representa um horÃ¡rio (hora, minuto e segundo)
struct Horario
{
    int hora;     // Armazena a hora (0 a 23)
    int minuto;   // Armazena o minuto (0 a 59)
    int segundo;  // Armazena o segundo (0 a 59)
};

// Estrutura que representa uma data (dia, mÃªs e ano)
struct Data
{
    int dia;   // Armazena o dia do mÃªs (1 a 31)
    int mes;   // Armazena o mÃªs (1 a 12)
    int ano;   // Armazena o ano (ex: 2025)
};

// Estrutura que representa um compromisso
struct Compromisso
{
    struct Data data;       // Cada compromisso contÃ©m uma data
    struct Horario horario; // Cada compromisso contÃ©m um horÃ¡rio
    char texto[100];        // Texto descritivo do compromisso (ex: "ReuniÃ£o com a equipe")
};


int main()  // FunÃ§Ã£o principal
{
    struct Compromisso c1;  // Declara uma variÃ¡vel do tipo "Compromisso" chamada c1

    // --- ENTRADA DE DADOS ---
    printf("Digite o dia do compromisso: ");
    scanf("%d", &c1.data.dia);  // LÃª o dia e armazena dentro da estrutura Data, que estÃ¡ dentro de Compromisso

    printf("Digite o mes do compromisso: ");
    scanf("%d", &c1.data.mes);  // LÃª o mÃªs

    printf("Digite o ano do compromisso: ");
    scanf("%d", &c1.data.ano);  // LÃª o ano

    printf("Digite a hora do compromisso: ");
    scanf("%d", &c1.horario.hora);  // LÃª a hora

    printf("Digite os minutos do compromisso: ");
    scanf("%d", &c1.horario.minuto);  // LÃª os minutos

    printf("Digite os segundos do compromisso: ");
    scanf("%d", &c1.horario.segundo);  // LÃª os segundos

    getchar();  // Limpa o '\n' deixado pelo scanf antes da leitura da string

    printf("Descreva o compromisso: ");
    fgets(c1.texto, sizeof(c1.texto), stdin);  // LÃª o texto do compromisso (pode conter espaÃ§os)

    // Remove o '\n' que o fgets adiciona no final, se existir
    c1.texto[strcspn(c1.texto, "\n")] = '\0';


    // --- SAÃDA DE RESULTADOS ---
    printf("\n=== Dados do Compromisso ===\n");
    printf("Data: %02d/%02d/%04d\n", c1.data.dia, c1.data.mes, c1.data.ano);  // Exibe data formatada
    printf("Horario: %02d:%02d:%02d\n", c1.horario.hora, c1.horario.minuto, c1.horario.segundo);  // Exibe horÃ¡rio formatado
    printf("Descricao: %s\n", c1.texto);  // Exibe o texto descritivo do compromisso

    system("pause");  // Pausa o programa (somente no Windows)
    return 0;         // Retorna 0, indicando execuÃ§Ã£o bem-sucedida
}
